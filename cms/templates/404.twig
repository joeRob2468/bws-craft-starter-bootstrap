{# @var craft \craft\web\twig\variables\CraftVariable #}
{% set entry = craft.entries.section("notFound").first() %}

{% extends "_layouts/_layout.twig" %}

{% block _inline_css %}
    <style>
        {{source ("404_critical.min.css", ignore_missing = true)}}</style>
{% endblock %}

{% block content %}

    <section class="section is-medium animatable missing-page-error-section">
        <div class="page-container is-small-desktop">
            <div class="missing-page-error text-center">
                <h2>Sorry, you might be lost (404).</h2>
                <p>
                    <strong>We couldn't find the page you're looking for.</strong>
                    <br>
                    Unless you really love this page,
                    <a href="{{ siteUrl }}">feel free to visit our home page instead.</a>
                </p>
            </div>
        </div>
    </section>

{% endblock %}

{% block _inline_js %}{% endblock %}
