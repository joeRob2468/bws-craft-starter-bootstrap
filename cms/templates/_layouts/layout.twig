{% extends "_layouts/base" %}

{# Set the namespace we'll use for Highway views to match our namespace in the nav. If it's not defined, use 'common' #}
{% set namespace = 'common' %}

{% block body %}

    {% include "_partials/global/page_revealer.twig" %}

    <main data-router-wrapper>
        <div data-router-view="{{ namespace }}">
            <div class="page-wrapper">
                {# -- Header -- #}
                {% include "_partials/global/header.twig" %}

                <div id="page-content-container">
                    {# -- Primary content block -- #}
                    {% block content %}{% endblock %}

                    {# -- Content that appears below the primary content block -- #}
                    {% block subcontent %}{% endblock %}
                </div>

                {# -- Footer -- #}
                {% include "_partials/global/footer.twig" %}
            </div>
        </div>
    </main>

    {% include '_partials/global/newsletter-signup-popup' %}

{% endblock %}