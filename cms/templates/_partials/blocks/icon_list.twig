{# Icon List Block #}
{% set block_type = "icon_list" %}

{# Block variable defaults #}
{% set heading = block['heading'] is defined ? block.heading : '' %}
{% set subheading = block['subheading'] is defined ? block.subheading : '' %}
{% set sectionType = block['sectionType'] is defined ? block.sectionType : 'standard' %}
{% set disablePartners = block['useCustomContent'] is defined ? block.useCustomContent : false %}
{% set items = block.children is defined ? block.children|filter(item => item.type.handle == 'icon_list_item') : null %}

<section id="permalink-{{ index }}--{{ block.type.handle }}" class="section section--medium section--whitespace section-{{ block_type }}--block section--{{ sectionType }} animatable">
    <div class="container">
        {% if subheading|length %}
            <p class="subtitle--heading">{{ subheading }}</p>
        {% endif %}
        {% if heading|length %}
            <h2 class="standard--heading">{{ heading }}</h2>
        {% endif %}

        {% if items|length %}
        <div class="icon-items grid-x grid-margin-x">        
        {% for item in items %}
            {% set icon = item['icon'] is defined ? item.icon : '' %}
            {% set title = item['rtfShortContent'] is defined ? item.rtfShortContent : '' %}
            {% set url = item['linkUrl'] is defined ? item.linkUrl : '' %}

            <div class="icon-item cell large-3 medium-6 small-12">
                <div class="icon-container">
                    {% if icon|length %}<span class="icon {{ icon }}"></span>{% endif %}
                </div>
                <div class="content-container">
                    {% if title|length %}<div class="icon-title content rte">{{ title }}</div>{% endif %}
                </div>
            </div>
        {% endfor %}
        </div>
        {% endif %}
    </div>
</section>
